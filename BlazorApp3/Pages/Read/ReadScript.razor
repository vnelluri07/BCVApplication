@page "/read/script/{Id:int}"
@using BeersCheersVasis.Api.Models.Reaction
@inject BeersCheersVasis.Api.Client.IScriptApi ScriptApi
@inject BeersCheersVasis.Api.Client.ICommentApi CommentApi
@inject BeersCheersVasis.Api.Client.IReactionApi ReactionApi
@inject BeersCheersVasis.Api.Client.IAuthApi AuthApi
@inject IJSRuntime JS
@inject NavigationManager Nav

<PageTitle>@(_script?.Title ?? "Reading") ‚Äî Beers Cheers & Vasis</PageTitle>

@if (_script is not null)
{
    <HeadContent>
        <meta name="description" content="@GetExcerpt(_script.Content, 160)" />
        <meta property="og:title" content="@_script.Title" />
        <meta property="og:description" content="@GetExcerpt(_script.Content, 160)" />
        <meta property="og:type" content="article" />
    </HeadContent>
}

@if (_loading)
{
    <div class="bcv-article">
        <div class="bcv-skeleton bcv-skeleton-title"></div>
        <div class="bcv-skeleton bcv-skeleton-line"></div>
        <div class="bcv-skeleton bcv-skeleton-line" style="width:80%"></div>
        <div class="bcv-skeleton bcv-skeleton-line" style="width:60%"></div>
    </div>
}
else if (_script is null)
{
    <div class="bcv-article bcv-text-center bcv-text-muted">Script not found.</div>
}
else
{
    <article class="bcv-article">
        <header class="bcv-article-header">
            @if (!string.IsNullOrEmpty(_script.CategoryName))
            {
                <span class="bcv-badge bcv-mb-md" style="display:inline-block; margin-bottom:1rem;">@_script.CategoryName</span>
            }
            <h1>@_script.Title</h1>
            <div class="bcv-article-meta">
                @(_script.PublishedDate?.ToString("MMMM d, yyyy") ?? _script.CreatedDate?.ToString("MMMM d, yyyy"))
                ¬∑ @ReadingTime(_script.Content) min read
            </div>
        </header>

        <div class="bcv-article-body editor-rendered-content">
            @((MarkupString)(_script.Content ?? ""))
        </div>

        <!-- Reactions -->
        <div style="display:flex; align-items:center; gap:1rem; padding:1.5rem 0; border-top:1px solid var(--bcv-border); margin-top:2rem;">
            <button class="bcv-react-btn @(_userReaction == ReactionType.SuperLike ? "bcv-react-active" : "")"
                    @onclick="() => React(ReactionType.SuperLike)" title="Super Like">
                üî• <span>@_counts.SuperLikes</span>
            </button>
            <button class="bcv-react-btn @(_userReaction == ReactionType.Like ? "bcv-react-active" : "")"
                    @onclick="() => React(ReactionType.Like)" title="Like">
                üëç <span>@_counts.Likes</span>
            </button>
            <button class="bcv-react-btn @(_userReaction == ReactionType.Dislike ? "bcv-react-active" : "")"
                    @onclick="() => React(ReactionType.Dislike)" title="Dislike">
                üëé <span>@_counts.Dislikes</span>
            </button>
            @{ var total = _counts.SuperLikes + _counts.Likes + _counts.Dislikes; }
            @if (total > 0)
            {
                <div style="flex:1; max-width:200px; height:4px; background:var(--bcv-border); border-radius:2px; overflow:hidden;">
                    <div style="display:flex; height:100%;">
                        <div style="width:@((_counts.SuperLikes + _counts.Likes) * 100.0 / total)%; background:#198754;"></div>
                        <div style="width:@(_counts.Dislikes * 100.0 / total)%; background:#dc3545;"></div>
                    </div>
                </div>
            }
        </div>
    </article>

    <!-- Share + Related -->
    <div class="bcv-content" style="margin-bottom:2rem;">
        <div style="display:flex; gap:0.75rem; align-items:center; margin-bottom:2rem;">
            <span class="bcv-text-muted" style="font-size:0.85rem;">Share:</span>
            <button class="bcv-btn-sm" @onclick="ShareTwitter">ùïè Twitter</button>
            <button class="bcv-btn-sm" @onclick="CopyLink">üìã Copy Link</button>
            @if (_linkCopied) { <span style="font-size:0.8rem; color:#198754;">‚úì Copied!</span> }
        </div>

        @if (_related?.Any() == true)
        {
            <h3 class="bcv-mb-md">More in @_script.CategoryName</h3>
            <div class="bcv-card-grid" style="grid-template-columns:repeat(auto-fill, minmax(220px, 1fr));">
                @foreach (var r in _related.Take(3))
                {
                    <div class="bcv-card" @onclick="() => GoToRelated(r.Id)" style="cursor:pointer;">
                        <div class="bcv-card-body">
                            <div class="bcv-card-title" style="font-size:0.95rem;">@r.Title</div>
                            <div class="bcv-card-meta">@(r.PublishedDate?.ToString("MMM d, yyyy"))</div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Comments Section -->
    <section class="bcv-section-alt">
        <div class="bcv-content">
            <h3 class="bcv-mb-lg">Comments (@(_comments?.Count() ?? 0))</h3>

            @if (_comments?.Any() == true)
            {
                @foreach (var comment in _comments)
                {
                    <CommentThread Comment="comment" OnReply="HandleReply"
                                   ReactionApi="ReactionApi" VoterKey="@_voterKey" />
                }
            }
            else
            {
                <p class="bcv-text-muted">No comments yet. Be the first to share your thoughts.</p>
            }

            <!-- Comment form -->
            <div class="bcv-comment-form" style="border-top: 1px solid var(--bcv-border); padding-top: var(--bcv-space-lg); margin-top: var(--bcv-space-xl);">
                @if (_replyingTo.HasValue)
                {
                    <div style="font-size:0.85rem; color:var(--bcv-text-light); margin-bottom:0.5rem;">
                        Replying to a comment ¬∑ <a href="javascript:void(0)" @onclick="CancelReply" style="text-decoration:underline;">Cancel</a>
                    </div>
                }
                <h4>@(_replyingTo.HasValue ? "Write a reply" : "Leave a comment")</h4>
                <p style="font-size:0.85rem; color:var(--bcv-text-light); margin-bottom:0.75rem;">
                    You'll be given a random pen name ‚Äî no login required.
                </p>
                <textarea @bind="_newComment" rows="3" placeholder="Share your thoughts..."
                    class="bcv-textarea"></textarea>
                <div class="bcv-mt-sm">
                    <TurnstileWidget @ref="_turnstile" />
                </div>
                @if (!string.IsNullOrEmpty(_commentError))
                {
                    <p style="color:var(--bcv-danger); font-size:0.85rem; margin-top:0.25rem;">@_commentError</p>
                }
                <button class="bcv-btn bcv-mt-sm" @onclick="PostComment" disabled="@_posting">
                    @(_posting ? "Posting..." : "Post Comment")
                </button>
            </div>
        </div>
    </section>
}

@code {
    [Parameter] public int Id { get; set; }

    private BeersCheersVasis.Api.Models.Script.ScriptResponse? _script;
    private IEnumerable<BeersCheersVasis.Api.Models.Comment.CommentResponse>? _comments;
    private string _newComment = "";
    private string _commentError = "";
    private bool _loading = true;
    private bool _posting;
    private int? _replyingTo;
    private TurnstileWidget? _turnstile;

    // Reactions
    private BeersCheersVasis.Api.Models.Reaction.ReactionCountsResponse _counts = new();
    private BeersCheersVasis.Api.Models.Reaction.ReactionType? _userReaction;
    private string _voterKey = "";
    private IEnumerable<BeersCheersVasis.Api.Models.Script.ScriptResponse>? _related;
    private bool _linkCopied;

    protected override async Task OnParametersSetAsync()
    {
        _loading = true;
        try
        {
            _voterKey = await GetOrCreateVoterKey();
            _script = await ScriptApi.GetAsync(Id);
            _comments = await CommentApi.GetByScriptAsync(Id);
            var counts = await ReactionApi.GetScriptCountsAsync(Id, _voterKey);
            _counts = counts;
            _userReaction = counts.UserReaction;

            // Load related scripts from same category
            if (_script?.CategoryId.HasValue == true)
            {
                var all = await ScriptApi.GetPublishedAsync(_script.CategoryId.Value);
                _related = all.Where(s => s.Id != Id);
            }
        }
        catch { }
        _loading = false;
    }

    private async Task<string> GetOrCreateVoterKey()
    {
        try
        {
            var key = await JS.InvokeAsync<string>("localStorage.getItem", "bcv_voter_key");
            if (!string.IsNullOrEmpty(key)) return key;
            key = Guid.NewGuid().ToString("N");
            await JS.InvokeVoidAsync("localStorage.setItem", "bcv_voter_key", key);
            return key;
        }
        catch { return Guid.NewGuid().ToString("N"); }
    }

    private async Task React(BeersCheersVasis.Api.Models.Reaction.ReactionType type)
    {
        try
        {
            var result = await ReactionApi.ReactAsync(new()
            {
                ScriptId = Id,
                VoterKey = _voterKey,
                ReactionType = type
            });
            _counts = result;
            _userReaction = result.UserReaction;
        }
        catch { }
    }

    private void HandleReply(int commentId)
    {
        _replyingTo = commentId;
        StateHasChanged();
    }

    private void CancelReply()
    {
        _replyingTo = null;
    }

    private async Task PostComment()
    {
        _commentError = "";
        if (string.IsNullOrWhiteSpace(_newComment))
        {
            _commentError = "Please write something before posting.";
            return;
        }

        _posting = true;
        try
        {
            // Verify Turnstile
            var turnstileToken = _turnstile is not null ? await _turnstile.GetResponseAsync() : null;
            if (string.IsNullOrEmpty(turnstileToken))
            {
                _commentError = "Please complete the verification challenge.";
                _posting = false;
                return;
            }

            var verified = await AuthApi.VerifyTurnstileAsync(turnstileToken);
            if (!verified)
            {
                _commentError = "Verification failed. Please try again.";
                if (_turnstile is not null) await _turnstile.ResetAsync();
                _posting = false;
                return;
            }

            await CommentApi.CreateAsync(new BeersCheersVasis.Api.Models.Comment.CreateCommentRequest
            {
                ScriptId = Id,
                ParentCommentId = _replyingTo,
                Content = _newComment.Trim()
            });
            _newComment = "";
            _replyingTo = null;
            _comments = await CommentApi.GetByScriptAsync(Id);
            if (_turnstile is not null) await _turnstile.ResetAsync();
        }
        catch
        {
            _commentError = "Failed to post comment. Please try again.";
        }
        _posting = false;
    }

    private static int ReadingTime(string? html)
    {
        if (string.IsNullOrEmpty(html)) return 1;
        var text = System.Text.RegularExpressions.Regex.Replace(html, "<[^>]+>", " ");
        var words = text.Split((char[]?)null, StringSplitOptions.RemoveEmptyEntries).Length;
        return Math.Max(1, (int)Math.Ceiling(words / 200.0));
    }

    private static string GetExcerpt(string? html, int maxLen)
    {
        if (string.IsNullOrEmpty(html)) return "";
        var text = System.Text.RegularExpressions.Regex.Replace(html, "<[^>]+>", " ");
        text = System.Net.WebUtility.HtmlDecode(text);
        text = System.Text.RegularExpressions.Regex.Replace(text, @"\s+", " ").Trim();
        return text.Length > maxLen ? text[..maxLen] + "‚Ä¶" : text;
    }

    private async Task ShareTwitter()
    {
        var url = Nav.Uri;
        var text = Uri.EscapeDataString(_script?.Title ?? "");
        await JS.InvokeVoidAsync("open", $"https://twitter.com/intent/tweet?text={text}&url={Uri.EscapeDataString(url)}", "_blank");
    }

    private async Task CopyLink()
    {
        try
        {
            await JS.InvokeVoidAsync("navigator.clipboard.writeText", Nav.Uri);
            _linkCopied = true;
            _ = Task.Delay(2000).ContinueWith(_ => { _linkCopied = false; InvokeAsync(StateHasChanged); });
        }
        catch { }
    }

    private void GoToRelated(int id) => Nav.NavigateTo($"/read/script/{id}");
}

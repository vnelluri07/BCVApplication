@page "/login"
@inject BeersCheersVasis.Api.Client.IAuthApi AuthApi
@inject BlazorApp3.Services.BcvAuthStateProvider AuthState
@inject NavigationManager Nav
@inject IJSRuntime JS
@inject Microsoft.Extensions.Configuration.IConfiguration Config

<PageTitle>Sign In â€” Beers Cheers & Vasis</PageTitle>

<section class="bcv-section">
    <div class="bcv-container" style="max-width:400px; text-align:center;">
        <h1 class="bcv-mb-lg">Sign In</h1>
        <p class="bcv-text-muted bcv-mb-xl">Sign in with your Google account to access the admin dashboard.</p>

        @if (!string.IsNullOrEmpty(_error))
        {
            <p style="color:var(--bcv-danger); margin-bottom:1rem;">@_error</p>
        }

        <button class="bcv-btn bcv-btn-primary" @onclick="SignInWithGoogle" style="padding:0.75rem 2rem; display:inline-flex; align-items:center; gap:0.5rem;">
            <svg width="18" height="18" viewBox="0 0 48 48"><path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/><path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/><path fill="#FBBC05" d="M10.53 28.59a14.5 14.5 0 0 1 0-9.18l-7.98-6.19a24.0 24.0 0 0 0 0 21.56l7.98-6.19z"/><path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/></svg>
            Sign in with Google
        </button>
    </div>
</section>

@code {
    private string _error = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var clientId = Config["GoogleAuth:ClientId"];
            await JS.InvokeVoidAsync("bcvInitGoogleSignIn", clientId, DotNetObjectReference.Create(this));
        }
    }

    private async Task SignInWithGoogle()
    {
        await JS.InvokeVoidAsync("bcvGoogleSignInPopup");
    }

    [JSInvokable]
    public async Task OnGoogleAuthCode(string code)
    {
        _error = "";
        try
        {
            var result = await AuthApi.GoogleLoginWithCodeAsync(code, Nav.BaseUri + "google-callback.html");
            await AuthState.LoginAsync(result.Token);
            Nav.NavigateTo("/admin");
        }
        catch
        {
            _error = "Sign in failed. Make sure your account has admin access.";
        }
        StateHasChanged();
    }
}

@page "/"
@using MudBlazor
@using BeersCheersAndVasis.UI.ViewModels.Script

<PageTitle>Vasi Scripts</PageTitle>
<MudPaper Class="mt-12">
    <MudContainer MaxWidth="MaxWidth.ExtraLarge">
        <MudOverlay Visible="isLoading">
            <MudProgressCircular Color="Color.Secondary" Indeterminate="true" />
        </MudOverlay>
    <MudTable Class="pt-4" T="ScriptViewModel" Items="_model.Scripts" Hover="true">
        <HeaderContent>
            <MudTh>T#</MudTh>
            <MudTh>Title</MudTh>
            <MudTh>Content</MudTh>
        </HeaderContent>
        <RowTemplate Context="script">
            <MudTd>@script.Id</MudTd>
            <MudTd>@script.Title</MudTd>
            <MudTd>@script.Content</MudTd>
            <MudTd><MudButton Color="Color.Secondary" Variant="Variant.Filled" OnClick="@(() => ReadMore_OnClick(script))">Read more</MudButton></MudTd>
        </RowTemplate>
    </MudTable>
    </MudContainer>
</MudPaper>